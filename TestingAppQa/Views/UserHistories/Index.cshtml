
@model IEnumerable<TestingAppQa.Models.UserHistory>
<div class="content">
    <div class="d-flex justify-content-between">
        <!-- Animated -->
        <h3 class="text-secondary">Historias de usuario</h3>
        <a onclick="showInPopup('@Url.Action("Create", "UserHistories", null,Context.Request.Scheme)', 'HU Nuevo')" class="btn btn-danger text-white"><i class="fa fa-plus"></i>Nueva HU</a>
    </div>

    <div class="row">

        @foreach (var item in Model)
        {

             <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body d-flex justify-content-around">
                            
                                <p class="">1</p>
                            
                            <div>
                                <h5>@Html.DisplayFor(modelItem => item.Title)</h5>
                                <div>
                                    <p class="m-0 mt-2">
                                        Dado que: @Html.DisplayFor(modelItem => item.IWant)
                                    </p>
                                    <p class="m-0">
                                        Cuando que: @Html.DisplayFor(modelItem => item.Where)
                                    </p>
                                    <p class="m-0">
                                        Entonces: @Html.DisplayFor(modelItem => item.Then)
                                    </p>
                                </div>
                                
                            </div>
                            <div><i  onclick="showInPopup('@Url.Action("Edit","UserHistories",new {id=item.IdUserHistory},Context.Request.Scheme)','Modificar Informacion General HU')" class="fa fa-pencil"></i>
                            <input onchange="seleccionarHU(@item.IdUserHistory)" class="cartItem"
                                  type="checkbox" value="false" >
                            </div>
                            <div>
                            
                        </div>
                        </div>

                    </div>
                </div><!-- /# column -->
        }
    </div>
    <script>
    
    seleccionarHU = (idhu) => {

        $.post("@Url.Action("SelectHU", "UserHistories")?idhu=" + idhu,function(re){

         //redirect now
         window.location.href="@Url.Action("Index", "TestCases")";
     });
}</script>
    <!-- .animated -->
</div>